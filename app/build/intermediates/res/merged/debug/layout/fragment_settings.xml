<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.monilandharia.invoice.Settings">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:src="@drawable/frame" />

        <LinearLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:padding="20dp"
                android:text="Company Details"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:theme="@style/MyButton" />

            <TextView
                android:id="@+id/taxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:text="Taxes"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:theme="@style/MyButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoice_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:padding="20dp"
                android:text="Invoice Prefix"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:theme="@style/MyButton" />

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:text="Currency"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:theme="@style/MyButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/part3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vendor_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center|center_vertical"
                android:text="Vendor Number"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:theme="@style/MyButton" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/heart"
            android:text=" us? "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Upgrade to PRO!! "
            android:textColor="@color/colorPrimary" />


        <ImageView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:src="@drawable/feedback" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/share"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info"
            android:layout_alignStart="@+id/info"
            android:layout_below="@+id/feedback"
            android:layout_marginTop="5dp"
            android:text="About"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ratingBar"
            android:layout_marginLeft="-10dp"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:text="Feedback"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/share"
            android:layout_alignStart="@+id/share"
            android:layout_alignTop="@+id/textView4"
            android:text="Share"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:theme="@style/MyRatingBar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="61dp"
            android:layout_marginTop="-10dp"
            android:text="Rate your experience"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginTop="-20dp"
            android:text="  Basic Settings :"
            android:textColor="#000000" />

    </RelativeLayout>
</ScrollView>