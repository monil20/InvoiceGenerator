<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.monilandharia.invoice.CompanyDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comp_logo"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/comp_logo" />

    <EditText
        android:id="@+id/comp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comp_logo"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#009688"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:hint="Company Name"
        android:inputType="text"
        android:textSize="21dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="#####"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:maxLength="2"
        android:layout_below="@+id/comp_name"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/comp_email"
        android:layout_alignRight="@+id/comp_email"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:ems="10"
        android:hint="##########"
        android:inputType="number"
        android:maxLength="10" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comp_email"
        android:layout_alignLeft="@+id/comp_email"
        android:layout_alignStart="@+id/comp_email"
        android:layout_marginBottom="13dp"
        android:src="@drawable/plus" />

    <EditText
        android:id="@+id/comp_email"
        android:layout_width="wrap_content"
        android:layout_below="@id/editText"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/comp_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/comp_email"
        android:layout_alignLeft="@+id/comp_email"
        android:layout_alignRight="@+id/comp_email"
        android:layout_alignStart="@+id/comp_email"
        android:layout_below="@+id/comp_email"
        android:hint="Website"
        android:inputType="textUri" />

    <Button
        android:id="@+id/button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comp_website"
        android:layout_alignStart="@+id/comp_website"
        android:layout_alignTop="@+id/button2"
        android:text="Address"
        android:textAllCaps="false"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/button2"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_below="@+id/comp_website"
        android:text="T &amp; C"
        android:textAllCaps="false"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/button3"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:text="Declaration"
        android:textAllCaps="false"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/button4"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:text="Signature"
        android:textAllCaps="false"
        android:theme="@style/MyButton" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/company_details_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_marginTop="24dp"
        android:background="#00897b"
        android:padding="12dp"
        android:text="Save"
        android:textColor="#FFFFFF" />


</RelativeLayout>
</ScrollView>