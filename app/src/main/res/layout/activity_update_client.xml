<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/update_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            cardview:cardCornerRadius="10dp"
            cardview:cardElevation="20dp"
            tools:context="com.example.monilandharia.invoice.UpdateProduct">

            <RelativeLayout
                android:id="@+id/rel_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/bullet_big" />

                <TextView
                    android:id="@+id/update_client_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/update_client_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29dp"
                    android:text="Client No"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/update_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_client_number"
                    android:layout_centerHorizontal="true"
                    android:text="Client Name"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/update_client_name"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Email :"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/update_client_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title1"
                    android:gravity="center"
                    android:text="Email"
                    android:textSize="17dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/update_client_email"
                    android:gravity="center"
                    android:text="Website :"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary" />


                <TextView
                    android:id="@+id/update_client_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title2"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:text="Website"
                    android:textSize="17dp"
                    android:textColor="#132393" />


                <TextView
                    android:id="@+id/temp_txtvu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_client_website"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Address :"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/update_client_addr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Line 1"
                    android:textSize="18dp"
                    android:layout_below="@+id/temp_txtvu"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/update_client_addr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/update_client_addr1"
                    android:text="Address Line 2"
                    android:textSize="18dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/update_client_addr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/update_client_addr2"
                    android:text="Address Line 3"
                    android:textSize="18dp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/linear_city_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/update_client_addr3"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/update_client_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="City"
                        android:textSize="17dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/update_client_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="State"
                        android:textSize="17dp"
                        android:textColor="#000000" />

                </LinearLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/client_update_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:fillViewport="false"
        android:src="@drawable/ic_edit" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/client_update_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/client_update_update"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_delete" />

</RelativeLayout>
