<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.monilandharia.invoice.CustomTextView
        android:id="@+id/search_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Product Name"
        android:textSize="21dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_prod_name"
        android:orientation="horizontal">

        <com.example.monilandharia.invoice.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="33.3"
            android:gravity="right|center_vertical"
            android:text="Quantity:" />

        <EditText
            android:id="@+id/search_sold_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_gravity="center"
            android:layout_weight="33.3"
            android:gravity="center_horizontal|center_vertical" />

        <com.example.monilandharia.invoice.CustomTextView
            android:id="@+id/search_avail_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="33.3"
            android:gravity="center_vertical"
            android:text="/ 63" />

    </LinearLayout>

    <com.example.monilandharia.invoice.CustomTextView
        android:id="@+id/search_prod_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:text="Rate: " />

    <Button
        android:id="@+id/search_ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_prod_rate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:text="OK"
        android:textAllCaps="false" />

</RelativeLayout>